@using MottuWeb.Models

@model MotorcycleDTO
@{
}
<form asp-action="CreateMotorcycle">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Cadastrar Moto</h1>
        </div>

        <div class="row">
            <div class="col-md-6 offset-3 pb-2">
                <label class="form-label">Ano</label>
                <input class="form-control" type="number" asp-for="Year" placeholder="Ano">
                <span asp-asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="col-md-6 offset-3 pb-2">
                <label class="form-label">Modelo</label>
                <input class="form-control" type="text" asp-for="Model" placeholder="Modelo">
                <span asp-asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="col-md-6 offset-3 pb-2">
                <label class="form-label">Placa</label>
                <input class="form-control" type="text" asp-for="Plate" placeholder="Placa">
                <span asp-asp-validation-for="Plate" class="text-danger"></span>
            </div>
            <div class="col-md-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-success">Salvar</button>
            </div>
        </div>
    </div>
</form>